{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "allowJs": true
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "cypress.config.ts",
    "tailwind.config.js",
    "jest.config.js",
    "jest.integration.config.js"
  ]
}